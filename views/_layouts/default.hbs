    <script>
    $(document).ready(function(){
        //and this for good measure
        $('#url-decoded').keyup(function(){
          $('#uri-encoded').val(encodeURI($(this).val()));
          $('#path-encoded').val(encodeURIComponent($(this).val()));
        });
        $('#uri-encoded').keyup(function(){
          $('#url-decoded').val(decodeURI($(this).val()));
          $('#path-encoded').val(encodeURIComponent(decodeURI($(this).val())));
        });
        $('#path-encoded').keyup(function(){
          $('#url-decoded').val(decodeURIComponent($(this).val()));
          $('#uri-encoded').val(encodeURI(decodeURIComponent($(this).val())));
        });
    });
    </script>

